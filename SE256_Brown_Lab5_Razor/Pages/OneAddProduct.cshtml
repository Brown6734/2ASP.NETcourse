@page
@model SE256_Brown_Lab5_Razor.Pages.OneAddProductModel
@{
    ViewData["Title"] = "OneAddProduct";
}

<h1>AddProduct</h1>

<form method="post">

    <!--string sql1 = "INSERT Into FunProducts (Product_Title, Product_Desc, Product_Category, ProdEmail, Manu_Date) VALUES (Product_Title, Product_Desc, Product_Category, ProdEmail, Manu_Date);";-->

    <div class="form-group">
        <label asp-for="aProduct.Items_Title"></label>
        <input asp-for="aProduct.Items_Title" type="text" class="form-control" placeholder="Brief Product Title" />
        <span asp-validation-for="aProduct.Items_Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="aProduct.Items_Desc"></label>
        <input asp-for="aProduct.Items_Desc" type="text" class="form-control" placeholder="Description of Product" />
        <span asp-validation-for="aProduct.Items_Desc" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="aProduct.Items_Category"></label>
        <input asp-for="aProduct.Items_Category" type="text" class="form-control" placeholder="category" />
        <span asp-validation-for="aProduct.Items_Category" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="aProduct.ItemsEmail"></label>
        <input asp-for="aProduct.ItemsEmail" type="text" class="form-control" placeholder="enter Email" />
        <span asp-validation-for="aProduct.ItemsEmail" class="text-danger"></span>
    </div>

    

    <button type="submit" class="btn btn-primary">Submit</button>

</form>

<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


